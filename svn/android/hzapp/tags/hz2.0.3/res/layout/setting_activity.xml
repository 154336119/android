<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5" >

    <com.huizhuang.zxsq.widget.actionbar.CommonActionBar
        android:id="@+id/common_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >
    </com.huizhuang.zxsq.widget.actionbar.CommonActionBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/common_action_bar"
        android:background="@color/color_f5f5f5" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:background="#d9d9d9" 
                android:layout_marginTop="30dp"/>
            <TextView
                android:id="@+id/tv_setting_push"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_push_setting"
                android:drawablePadding="16dp"
                android:drawableRight="@drawable/ic_setting_arrow"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:text="@string/txt_push_setting"
                android:textColor="@color/gray_4d"
                android:textSize="16sp" />                        
            <View
                android:id="@+id/line03"
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:background="#d9d9d9" />

            <View
                android:id="@+id/line04"
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:background="#d9d9d9"
                android:layout_marginTop="20dp"/>

            <RelativeLayout
                android:id="@+id/ll"
                android:layout_width="wrap_content"
                android:layout_height="45dp" 
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_environment"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:drawableLeft="@drawable/setting_environment_icon"
                    android:drawablePadding="16dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
            	    android:paddingRight="15dp"
                    android:text="@string/txt_no_load_image"
                    android:textColor="@color/gray_4d"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/ck_wifi_load_image"
                    style="@style/green_ck"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:checked="false" />
            </RelativeLayout>

            <View
                android:id="@+id/line05"
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:background="#d9d9d9" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:background="#d9d9d9" 
                android:layout_marginTop="20dp"/>            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:minHeight="45dp" 
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_cache"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/bg_listview_selector_default"
                    android:clickable="true"
                    android:drawableLeft="@drawable/setting_cache_icon"
                    android:drawablePadding="16dp"
                    android:gravity="center_vertical"
                    android:onClick="itemClearDiskCacheOnClick"
                    android:paddingLeft="20dp"
            	    android:paddingRight="15dp"
                    android:text="@string/txt_clear_cache"
                    android:textColor="@color/gray_4d"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_cache_size"
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="16dp"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:textColor="@color/gray_b2"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:id="@+id/line6"
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:background="#d9d9d9" />

            <View
                android:id="@+id/line7"
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:layout_marginTop="20dp"
                android:background="#d9d9d9" />
            <TextView
                android:id="@+id/tv_opinion"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:clickable="true"
                android:drawableLeft="@drawable/setting_opinion_icon"
                android:drawablePadding="16dp"
                android:drawableRight="@drawable/ic_setting_arrow"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
        	    android:paddingRight="15dp"
                android:onClick="itemFeedBackOnClick"
                android:text="@string/txt_feedback"
                android:textColor="@color/gray_4d"
                android:textSize="16sp" />

            <View
                android:id="@+id/line8"
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:background="#d9d9d9" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:background="#d9d9d9" 
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/tv_praise"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:clickable="true"
                android:drawableLeft="@drawable/setting_praise_icon"
                android:drawablePadding="16dp"
                android:drawableRight="@drawable/ic_setting_arrow"
                android:gravity="center_vertical"
                android:onClick="itemPraiseOnClick"
                android:paddingLeft="20dp"
        	    android:paddingRight="15dp"
                android:text="@string/txt_give_praise"
                android:textColor="@color/gray_4d"
                android:textSize="16sp" />

            <View
                android:id="@+id/line9"
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:background="#d9d9d9" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:background="#d9d9d9" 
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/tv_edition"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:clickable="true"
                android:drawableLeft="@drawable/setting_edition_icon"
                android:drawablePadding="16dp"
                android:drawableRight="@drawable/ic_setting_arrow"
                android:gravity="center_vertical"
                android:onClick="itemEditionOnClick"
                android:paddingLeft="20dp"
        	    android:paddingRight="15dp"
                android:text="@string/txt_version_information"
                android:textColor="@color/gray_4d"
                android:textSize="16sp" />

            <View
                android:id="@+id/line10"
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:background="#d9d9d9" />

            <Button
                android:id="@+id/btn_logout"
                style="@style/ButtonLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="8dp"
                android:onClick="btnLogoutOnClick"
                android:layout_marginRight="8dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/btn_orange"
                android:text="@string/txt_Logout" />

            <View
                android:id="@+id/line11"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>