<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <solid android:color="@color/tap_option_p" />

            <corners
                android:bottomLeftRadius="0.0dp"
                android:bottomRightRadius="4.0dp"
                android:topLeftRadius="0.0dp"
                android:topRightRadius="4.0dp" />

            <stroke
                android:width="1dp"
                android:color="@color/tap_option_stroke" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <solid android:color="@color/tap_option_p" />

            <corners
                android:bottomLeftRadius="0.0dp"
                android:bottomRightRadius="4.0dp"
                android:topLeftRadius="0.0dp"
                android:topRightRadius="4.0dp" />
        </shape>
    </item>

</layer-list>