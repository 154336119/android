<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView 
        android:id="@+id/iv_item_solution_image"
        android:layout_width="match_parent"
        android:layout_height="160dip"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"/>
    <ImageView 
        android:id="@+id/iv_item_solution_background"
        android:layout_width="match_parent"
        android:layout_height="160dip"
        android:background="@drawable/background_item_solution"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
        	android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp">
            <TextView 
                android:id="@+id/tv_item_solution_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_18"
                android:text="桐梓林一号"/>
            <TextView 
                android:id="@+id/tv_item_solution_nodename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_18"
                android:text="（泥木）"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
        	android:layout_marginRight="15dp">
            <TextView 
                android:id="@+id/tv_item_solution_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_12"
                android:text="田园 | 二居室 | 88m² | 2.8万"
                android:layout_alignParentLeft="true"/>
            <TextView 
                android:id="@+id/tv_item_solution_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_12"
                android:text="0.8km"
                android:drawableLeft="@drawable/distance_item_solution"
                android:drawablePadding="5dp"
                android:layout_toLeftOf="@+id/tv_item_solution_eye"
                android:layout_alignBaseline="@id/tv_item_solution_detail"/>
            <TextView 
                android:id="@+id/tv_item_solution_eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_12"
                android:text="35"
                android:drawableLeft="@drawable/eye_item_solution"
                android:drawablePadding="5dp"
                 android:layout_alignBaseline="@id/tv_item_solution_detail"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:contentDescription="@string/app_name"
            android:background="@color/layout_bg"/>
    </LinearLayout>
</FrameLayout>
