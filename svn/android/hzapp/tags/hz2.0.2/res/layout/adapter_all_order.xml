<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View 
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:background="#f5f5f5"/> 
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="#dddddd"/>            
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:paddingLeft="23dp"
            android:orientation="vertical"
            android:background="@color/white">
            <TextView 
		        android:id="@+id/tv_order_num"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="订单号 ：2015646565"
		        android:textSize="13sp"/>
            <TextView 
		        android:id="@+id/tv_order_time"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="下单时间"
		        android:textColor="@color/color_808080"
		        android:textSize="13sp"
		        android:layout_marginTop="11dp"/>
           	<View 
			    android:layout_width="match_parent"
			    android:layout_height="0.5px"
			    android:background="#d9d9d9"
			   	android:layout_marginTop="11dp"
			   	android:layout_marginBottom="11dp"/>
           	 <RelativeLayout 
           	     android:layout_width="match_parent"
           	     android:layout_height="wrap_content">
           	     <ImageView 
           	         android:id="@+id/iv_photo"
           	         android:layout_width="46dp"
           	         android:layout_height="46dp"
           	         android:src="@drawable/ic_default_header"/>
	             <TextView 
			        android:id="@+id/tv_user_name"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="下单时间"
			        android:maxLines="2"
			        android:ellipsize="end"
			        android:textSize="15sp"
			        android:textColor="@color/color_808080"
			        android:layout_toRightOf="@id/iv_photo"
			        android:layout_toLeftOf="@+id/tv_status"
			        android:layout_marginLeft="11dp"
			        android:layout_centerVertical="true"/>
	             <TextView 
			        android:id="@+id/tv_status"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="下单时间"
			        android:textSize="15sp"
			        android:textColor="@color/color_ff6c38"
			        android:layout_centerVertical="true"
			        android:layout_alignParentRight="true"
			        android:layout_marginRight="23dp"/>	                       	     
           	 </RelativeLayout>
           	<View 
			    android:layout_width="match_parent"
			    android:layout_height="0.5px"
			    android:background="#d9d9d9"
			    android:layout_marginTop="11dp"/>
            <TextView 
		        android:id="@+id/tv_place"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="中阿斯大法但是撒旦发生大幅撒旦发"
		        android:textSize="13sp"
		        android:singleLine="true"
		        android:textColor="@color/color_808080"
		        android:layout_centerVertical="true"
		        android:layout_alignParentRight="true"
		        android:layout_marginTop="11dp"
		        android:drawablePadding="7dp"
		        android:drawableLeft="@drawable/ic_location_grey"/>	            	           	 
        </LinearLayout>  
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="#dddddd"/>                  
</LinearLayout>
