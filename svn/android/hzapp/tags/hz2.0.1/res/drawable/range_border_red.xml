<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 边框颜色值 -->
    <item>
        <shape>
            <solid android:color="@color/orange_light" />
            <corners android:radius="5dip" /> 
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape>
            <solid android:color="@color/page_bg" />
            <stroke
                android:width="0dp"
                android:color="@color/orange_light" />
        </shape>
    </item>
</layer-list>