<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_content_zone"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@android:color/transparent"
    android:minHeight="120dp" >

    <ImageView
        android:id="@+id/item_img_photo"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/bg_photo_default" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="13dp"
        android:layout_toRightOf="@id/item_img_photo"
        android:minHeight="90dp" >

        <TextView
            android:id="@+id/item_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="3dp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/color_585858"
            android:textSize="@dimen/txt_size_18" />

        <TextView
            android:id="@+id/item_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_tv_title"
            android:layout_below="@id/item_tv_title"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/app_name"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/txt_size_16" />

        <TextView
            android:id="@+id/item_tv_love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="15dp"
            android:drawableLeft="@drawable/atlas_favorite"
            android:drawablePadding="6dp"
            android:text="@string/txt_default_number"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/txt_size_12" />

        <TextView
            android:id="@+id/item_tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/item_tv_love"
            android:drawableLeft="@drawable/atlas_share"
            android:drawablePadding="6dp"
            android:text="@string/txt_default_number"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/txt_size_12" />

        <TextView
            android:id="@+id/item_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="@string/txt_default_time"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/txt_size_12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_d9d9d9" >
    </View>

</RelativeLayout>