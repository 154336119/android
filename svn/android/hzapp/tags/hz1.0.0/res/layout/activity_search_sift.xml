<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.huizhuang.zxsq.widget.actionbar.CommonActionBar
        android:id="@+id/common_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.huizhuang.zxsq.widget.actionbar.CommonActionBar>

    <LinearLayout
        android:id="@+id/searchbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:background="@drawable/edittext_bg"
        android:gravity="center_vertical"
        android:padding="8dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_search_gray" />

        <com.huizhuang.zxsq.widget.ClearEditText
            android:id="@+id/input_keywork"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="查找：例如“龙发装饰”"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textColor="@color/gray_99"
            android:textColorHint="@color/gray_99"
            android:textSize="@dimen/txt_size_16" />
    </LinearLayout>

    <com.huizhuang.zxsq.widget.actionbar.SearchConditionItemActionBar
        android:id="@+id/condition_action_bar_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.huizhuang.zxsq.widget.actionbar.SearchConditionItemActionBar>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#ffe1e1e1" />

    <com.huizhuang.zxsq.widget.actionbar.SearchConditionItemActionBar
        android:id="@+id/condition_action_bar_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.huizhuang.zxsq.widget.actionbar.SearchConditionItemActionBar>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#ffe1e1e1" />

    <com.huizhuang.zxsq.widget.actionbar.SearchConditionItemActionBar
        android:id="@+id/condition_action_bar_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.huizhuang.zxsq.widget.actionbar.SearchConditionItemActionBar>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#ffe1e1e1" />

    <com.huizhuang.zxsq.widget.actionbar.SearchConditionItemActionBar
        android:id="@+id/condition_action_bar_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.huizhuang.zxsq.widget.actionbar.SearchConditionItemActionBar>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#ffe1e1e1" />
    
     <com.huizhuang.zxsq.widget.actionbar.SearchConditionItemActionBar
        android:id="@+id/condition_action_bar_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.huizhuang.zxsq.widget.actionbar.SearchConditionItemActionBar>

    <View
        android:id="@+id/line5"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:visibility="gone"
        android:background="#ffe1e1e1" />

</LinearLayout>