<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.huizhuang.zxsq.widget.actionbar.CommonActionBar
        android:id="@+id/common_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:textColor="@color/orange_light"
                android:textSize="@dimen/txt_size_24"
                android:text="恭喜您预约成功"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:textColor="@color/gray_80"
                android:textSize="@dimen/txt_size_18"
                android:text="请耐心等待客服与您联系，如需帮助"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:textColor="@color/gray_80"
                    android:textSize="@dimen/txt_size_18"
                    android:text="请拨"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/orange_light"
                    android:textSize="@dimen/txt_size_18"
                    android:text="400-607-0035"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/gray_80"
                    android:textSize="@dimen/txt_size_18"
                    android:text="(免费)"/>
            </LinearLayout>


            <Button
                android:id="@+id/btn_next"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/diary_btn_bg"
                android:gravity="center"
                android:padding="10dp"
                android:layout_gravity="center"
                android:text="查看我的订单"
                android:textColor="@color/orange_light"
                android:textSize="@dimen/txt_size_20"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/gray_80"
                android:layout_marginTop="32dp"
                android:textSize="@dimen/txt_size_18"
                android:layout_marginBottom="32dp"
                android:text="惠装狗狗提醒您，千万别忘记“设计报价”哟"/>

            <include
                layout="@layout/widget_client_progress_state_bar"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:src="@drawable/ic_order_success_1"/>

            <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@drawable/ic_order_success_2"/>-->
        </LinearLayout>
    </ScrollView>

</LinearLayout>