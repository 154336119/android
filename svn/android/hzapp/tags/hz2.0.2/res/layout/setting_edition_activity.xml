<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5" >

    <com.huizhuang.zxsq.widget.actionbar.CommonActionBar
        android:id="@+id/common_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >
    </com.huizhuang.zxsq.widget.actionbar.CommonActionBar>

    <LinearLayout
        android:id="@+id/LL" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="105dp"
        android:gravity="center">
	    <ImageView
	        android:id="@+id/iv_icon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/edition_logo" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="惠装"
            android:textColor="@color/gray_4c"
            android:textSize="30sp" 
            android:layout_marginLeft="15dp"/>	    
	</LinearLayout>
    <LinearLayout
        android:id="@+id/lin_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/LL"
        android:orientation="horizontal" 
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tv_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_about_edition"
            android:textColor="@color/gray_4c"
            android:textSize="@dimen/txt_size_14" />

        <TextView
            android:id="@+id/tv_edition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_4c"
            android:textSize="@dimen/txt_size_20" />

        <TextView
            android:id="@+id/tv_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_aboud_version"
            android:layout_marginLeft="5dp"
            android:textColor="@color/gray_4c"
            android:textSize="@dimen/txt_size_14" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lin_version"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:background="@null"
        android:src="@drawable/edition_btn_bg" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:src="@drawable/edition_info" />

</RelativeLayout>