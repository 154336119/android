<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical" >

    <com.huizhuang.zxsq.widget.actionbar.BillAccountingActionBar
        android:id="@+id/common_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >
    </com.huizhuang.zxsq.widget.actionbar.BillAccountingActionBar>

    <android.support.v4.view.ViewPager
        android:id="@+id/select_category_viewpager"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@id/common_action_bar"
        android:layout_gravity="center" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/select_category_viewpager_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_category_viewpager"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >
    </LinearLayout>

    <com.huizhuang.zxsq.widget.CalculatorView
        android:id="@+id/calculator_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/select_category_viewpager_indicator"
        android:layout_marginTop="5dp" >
    </com.huizhuang.zxsq.widget.CalculatorView>

</RelativeLayout>