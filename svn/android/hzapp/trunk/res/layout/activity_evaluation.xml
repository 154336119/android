<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/page_bg"
    android:orientation="vertical" >

    <com.huizhuang.zxsq.widget.actionbar.CommonActionBar
        android:id="@+id/common_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@color/color_ebebeb" />

                    <LinearLayout
                        android:id="@+id/lin_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="20dp" >

                                <com.huizhuang.zxsq.widget.CircleImageView
                                    android:id="@+id/iv_head"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_marginRight="15dp"
                                    android:src="@drawable/bg_photo_default" />

                                <ImageView
                                    android:id="@+id/iv_img_text_bg"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:contentDescription="@string/app_name"
                                    android:src="@drawable/icon_order_img_text_bg" />

                                <TextView
                                    android:id="@+id/tv_img_text"
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="40dp"
                                    android:gravity="center"
                                    android:singleLine="true"
                                    android:text="跪求好评"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/txt_size_12" />

                                <TextView
                                    android:id="@+id/tv_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:layout_toRightOf="@id/iv_head"
                                    android:drawablePadding="10dp"
                                    android:drawableRight="@drawable/icon_rz"
                                    android:singleLine="true"
                                    android:text="王大锤"
                                    android:textColor="@color/color_4c4c4c"
                                    android:textSize="@dimen/txt_size_16" />

                                <TextView
                                    android:id="@+id/tv_city"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tv_name"
                                    android:layout_marginTop="5dp"
                                    android:layout_toRightOf="@id/iv_head"
                                    android:singleLine="true"
                                    android:text="四川.成都 "
                                    android:textColor="@color/color_808080"
                                    android:textSize="@dimen/txt_size_14" />

                                <View
                                    android:id="@+id/v_line"
                                    android:layout_width="1px"
                                    android:layout_height="@dimen/txt_size_14"
                                    android:layout_below="@id/tv_name"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginTop="6dp"
                                    android:layout_toRightOf="@id/tv_city"
                                    android:background="@color/gray_disabled" />

                                <TextView
                                    android:id="@+id/tv_order_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tv_name"
                                    android:layout_marginLeft="3dip"
                                    android:layout_marginTop="5dp"
                                    android:layout_toRightOf="@id/v_line"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="25"
                                    android:textColor="@color/color_ff6c38"
                                    android:textSize="@dimen/txt_size_14" />

                                <TextView
                                    android:id="@+id/tv_order_count_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tv_name"
                                    android:layout_marginLeft="3dip"
                                    android:layout_marginTop="5dp"
                                    android:layout_toRightOf="@id/tv_order_count"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="订单"
                                    android:textColor="@color/color_808080"
                                    android:textSize="@dimen/txt_size_14" />

                                <RatingBar
                                    android:id="@+id/rb_score"
                                    android:layout_width="wrap_content"
                                    android:layout_height="18dip"
                                    android:layout_below="@id/tv_city"
                                    android:layout_marginTop="5dp"
                                    android:layout_toRightOf="@id/iv_head"
                                    android:isIndicator="true"
                                    android:numStars="5"
                                    android:progressDrawable="@drawable/rating_bar_yellow_new"
                                    android:stepSize="0.1" />

                                <TextView
                                    android:id="@+id/tv_score"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tv_city"
                                    android:layout_marginLeft="10dip"
                                    android:layout_marginTop="5dp"
                                    android:layout_toRightOf="@id/rb_score"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="4分"
                                    android:textColor="@color/color_ff6c38"
                                    android:textSize="@dimen/txt_size_14" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/tv_status"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="20dp"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="right"
                                android:singleLine="true"
                                android:text="水电验收阶段"
                                android:textColor="@color/color_808080"
                                android:textSize="@dimen/txt_size_14" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/gray_disabled" />

                        <LinearLayout
                            android:id="@+id/lin_content_container"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="visible" >

                            <requestFocus />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingTop="10dp" >

                                <RatingBar
                                    android:id="@+id/rb_grade_score"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center_horizontal"
                                    android:isIndicator="false"
                                    android:numStars="5"
                                    android:progressDrawable="@drawable/rating_bar_yellow_worksite"
                                    android:rating="5"
                                    android:stepSize="1" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal" >

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="1px"
                                    android:layout_weight="1"
                                    android:background="@color/gray_disabled" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:text="请监督工长是否存在以下问题"
                                    android:textColor="@color/color_ff6c38"
                                    android:textSize="@dimen/txt_size_14" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="1px"
                                    android:layout_weight="1"
                                    android:background="@color/gray_disabled" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lin_option_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="visible" >
                            </LinearLayout>

                            <EditText
                                android:id="@+id/et_evaluation"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_margin="20dp"
                                android:background="@drawable/bg_all_border_disabled"
                                android:gravity="top"
                                android:hint="写点评价吧..."
                                android:inputType="textMultiLine"
                                android:padding="5dp"
                                android:textColor="@color/color_4c4c4c"
                                android:textColorHint="@color/gray_disabled"
                                android:textSize="@dimen/txt_size_14" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_foreman_details_construction_btn"
                android:gravity="center"
                android:padding="20dp"
                android:text="评价"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_18" />
        </LinearLayout>

        <com.huizhuang.zxsq.widget.DataLoadingLayout
            android:id="@+id/data_load_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </com.huizhuang.zxsq.widget.DataLoadingLayout>
    </RelativeLayout>

</LinearLayout>