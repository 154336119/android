<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical" >

    <!-- 顶部图片 -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="200dip" >

        <ImageView
            android:id="@+id/foreman_constructionsite_topimg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_photo_default"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />

        <!-- 标题 -->

        <TextView
            android:id="@+id/foreman_constructionsite_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#7f000000"
            android:ellipsize="end"
            android:paddingBottom="8dip"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:paddingTop="8dip"
            android:singleLine="true"
            android:text="田园风格，完美的搭配"
            android:textColor="#ffffff"
            android:visibility="gone"
            android:textSize="16sp" />
    </RelativeLayout>
    <!-- 顶部部分 -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="20dip" >

        <LinearLayout
            android:id="@+id/foreman_constructionsite_top_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 小区 和面积 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:text="小区："
                    android:textColor="#4c4c4c"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/foreman_constructionsite_community"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中海名城"
                    android:textColor="#4c4c4c"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="2dip"
                    android:background="@drawable/home_page_dividing_line_v"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/foreman_constructionsite_measure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="128㎡  "
                    android:textColor="#4c4c4c"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 风格 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:text="造价："
                    android:textColor="#4c4c4c"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/foreman_constructionsite_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12万/全包"
                    android:textColor="#4c4c4c"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="2dip"
                    android:background="@drawable/home_page_dividing_line_v"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/foreman_constructionsite_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="田园风格 "
                    android:textColor="#4c4c4c"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 户型 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:text="户型："
                    android:textColor="#4c4c4c"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/foreman_constructionsite_housetype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="三居室"
                    android:textColor="#4c4c4c"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 工期 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:text="工期："
                    android:textColor="#4c4c4c"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/foreman_constructionsite_projecttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3个月"
                    android:textColor="#4c4c4c"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 免费参观 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/foreman_constructionsite_top_layout"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/foreman_constructionsite_freevisit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/foreman_constructionsite_free_visit_bg"
                android:gravity="center"
                android:padding="10dip"
                android:text="免费申请参观"
                android:textColor="#ff5c38"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/foreman_constructionsite_order_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="田园风格 "
                android:layout_marginTop="3dp"
                android:textColor="#4c4c4c"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_page_dividing_line_h"
        android:contentDescription="@string/app_name" />
    <!-- 流程线部分 -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="20dip"
        android:text="施工进度"
        android:textColor="#4c4c4c"
        android:textSize="15sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:src="@drawable/foreman_constructionsite_stage_start_n"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/foreman_constructionsite_start_line"
                android:layout_width="0dip"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="#d1d1d1"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:src="@drawable/foreman_constructionsite_stage_hydropower_n"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/foreman_constructionsite_hydropower_line"
                android:layout_width="0dip"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="#d1d1d1"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:src="@drawable/foreman_constructionsite_stage_mudwood_n"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/foreman_constructionsite_mudwood_line"
                android:layout_width="0dip"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="#d1d1d1"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:src="@drawable/foreman_constructionsite_stage_paint_n"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/foreman_constructionsite_paint_line"
                android:layout_width="0dip"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="#d1d1d1"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:src="@drawable/foreman_constructionsite_stage_completed_n"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/foreman_constructionsite_completed_line"
                android:layout_width="0dip"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="#d1d1d1"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:src="@drawable/foreman_constructionsite_stage_real_n"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:id="@+id/foreman_constructionsite_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dip"
                android:drawableTop="@drawable/foreman_constructionsite_stage_start_n"
                android:gravity="center"
                android:text="开工"
                android:textColor="#808080"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/foreman_constructionsite_hydropower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dip"
                android:drawableTop="@drawable/foreman_constructionsite_stage_hydropower_n"
                android:gravity="center"
                android:text="水电"
                android:textColor="#808080"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/foreman_constructionsite_mudwood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dip"
                android:drawableTop="@drawable/foreman_constructionsite_stage_mudwood_n"
                android:gravity="center"
                android:text="泥木"
                android:textColor="#808080"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/foreman_constructionsite_paint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dip"
                android:drawableTop="@drawable/foreman_constructionsite_stage_paint_n"
                android:gravity="center"
                android:text="油漆"
                android:textColor="#808080"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/foreman_constructionsite_completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dip"
                android:drawableTop="@drawable/foreman_constructionsite_stage_completed_n"
                android:gravity="center"
                android:text="竣工"
                android:textColor="#808080"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/foreman_constructionsite_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dip"
                android:drawableTop="@drawable/foreman_constructionsite_stage_real_n"
                android:gravity="center"
                android:text="实景"
                android:textColor="#808080"
                android:textSize="14sp" />
        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_page_dividing_line_h"
        android:contentDescription="@string/app_name" />
    <!-- 施工案例 -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="20dip"
        android:text="施工方案"
        android:textColor="#4c4c4c"
        android:textSize="15sp" />

</LinearLayout>