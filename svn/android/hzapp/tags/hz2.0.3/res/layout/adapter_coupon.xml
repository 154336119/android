<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_01"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_coupon_selector">
   <RelativeLayout 
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_weight="1"
       android:gravity="center"
       android:paddingTop="36dp"
       android:paddingBottom="36dp">
       <LinearLayout 
           android:id="@+id/ll"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
	       <TextView
	           android:id="@+id/tv_sign" 
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:text="ï¿¥"
	           android:textSize="21sp"
	           android:textColor="@color/color_fc6e6d"
	           android:layout_gravity="center"/>
	       <TextView
	           android:id="@+id/tv_money" 
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:textSize="36sp"
	           android:textColor="@color/color_fc6e6d"
	           android:layout_toRightOf="@+id/tv_sign"
	           android:layout_gravity="center"
	           android:layout_marginRight="2dp"
	           android:layout_marginLeft="2dp"/>
	       <TextView
	           android:id="@+id/tv_coupon"  
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:text="@string/txt_coupon"
	           android:textSize="21sp"
	           android:textColor="@color/color_fc6e6d"
	           android:layout_gravity="center"/>
	       	</LinearLayout>
	       <TextView
	           android:id="@+id/tv_content"  
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:text="@string/txt_coupon_content"
	           android:textSize="13sp"
	           android:textColor="@color/color_808080"
	           android:layout_below="@+id/ll"
	           android:layout_marginLeft="3dp"/>	
   </RelativeLayout>
   <ImageView
       android:id="@+id/iv_line" 
       android:layout_width="1dp"
       android:layout_height="match_parent"
       android:layout_gravity="center"
       android:src="@drawable/bg_coupon_line_selector"
       android:layout_marginTop="24dp"
       android:layout_marginBottom="24dp"/>

   <RelativeLayout
       android:layout_width="0dp"
       android:layout_height="match_parent"
       android:layout_weight="1" >

       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:layout_alignParentRight="true"
           android:src="@drawable/ic_coupon_icon" 
           android:layout_marginBottom="1dp"
           android:layout_marginRight="1dp"/>

       <TextView
           android:id="@+id/tv_effective_data"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerInParent="true"
           android:gravity="center"
           android:text="@string/txt_coupon_content"
           android:textColor="@color/color_7e7e7e"
           android:textSize="14sp" 
           android:lineSpacingExtra="3dp"/>
   </RelativeLayout>

</LinearLayout>
