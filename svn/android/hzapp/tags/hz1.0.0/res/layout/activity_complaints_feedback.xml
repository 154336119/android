<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical" >

    <com.huizhuang.zxsq.widget.actionbar.CommonActionBar
        android:id="@+id/common_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dip"
        android:background="@drawable/home_page_dividing_line_h"
        android:contentDescription="@string/app_name" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dip"
            android:text="请选择要投诉的订单"
            android:textColor="#4c4c4c"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:background="@drawable/home_page_dividing_line_h"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/complaints_feekback_order_select_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/complaints_feedback_order"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="15dip"
                    android:text="56785541865"
                    android:hint="请选择订单"
                    android:textColor="#4c4c4c"
                    android:textColorHint="#808080"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/complaints_feekback_order_select_line"
                    android:contentDescription="@string/app_name" />

                <ImageView
                    android:id="@+id/complaints_feedback_order_select"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/app_name"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip"
                    android:src="@drawable/account_order_icon" />
            </LinearLayout>

            <TextView
                android:id="@+id/complaints_feedback_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:lineSpacingMultiplier="1.3"
                android:text="请提供更详细的问题描述，以便我们的及时跟踪和处理。我们将在您发起投诉后30分钟内与您联系。"
                android:textColor="#808080"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_page_dividing_line_h"
        android:contentDescription="@string/app_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dip"
            android:background="@drawable/home_page_dividing_line_h"
            android:contentDescription="@string/app_name" />

        <EditText
            android:id="@+id/complaints_feedback_content"
            android:layout_width="match_parent"
            android:layout_height="150dip"
            android:background="#ffffff"
            android:gravity="left|top"
            android:inputType="text"
            android:padding="20dip"
            android:hint="描述您的问题"
            android:textColor="#4c4c4c"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/home_page_dividing_line_h"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

    <TextView
        android:id="@+id/complaints_feedback_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF6c38"
        android:gravity="center"
        android:padding="18dip"
        android:text="提交"
        android:textColor="#ffffff"
        android:textSize="20sp" />

</LinearLayout>