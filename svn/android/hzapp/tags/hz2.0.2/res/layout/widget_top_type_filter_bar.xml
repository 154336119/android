<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_fafafa"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_filter_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/ic_filter_indicator_down"
            android:gravity="center"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:singleLine="true"
            android:text="@string/txt_filter_key_name"
            android:textColor="@color/color_4c4c4c"
            android:textSize="@dimen/txt_size_16" />

        <View
            android:layout_width="1dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:background="@color/color_cccccc" />

        <TextView
            android:id="@+id/tv_filter_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/ic_filter_indicator_down"
            android:gravity="center"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:singleLine="true"
            android:text="@string/txt_filter_key_name"
            android:textColor="@color/color_4c4c4c"
            android:textSize="@dimen/txt_size_16" />

        <View
            android:layout_width="1dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:background="@color/color_cccccc" />

        <TextView
            android:id="@+id/tv_filter_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/ic_filter_indicator_down"
            android:gravity="center"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:singleLine="true"
            android:text="@string/txt_filter_key_name"
            android:textColor="@color/color_4c4c4c"
            android:textSize="@dimen/txt_size_16" />

        <View
            android:layout_width="1dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:background="@color/color_cccccc" />

        <TextView
            android:id="@+id/tv_filter_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/ic_filter_indicator_down"
            android:gravity="center"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:singleLine="true"
            android:text="@string/txt_filter_key_name"
            android:textColor="@color/color_4c4c4c"
            android:textSize="@dimen/txt_size_16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e3e3e3" />

</LinearLayout>